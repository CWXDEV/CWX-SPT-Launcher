<MudItem sm="12">
    <MudPaper Class="pa-5 ml-1 gap-1 d-flex flex-column card-overflow" Elevation="3">
        <MudImage Src="cogs.png" Alt="Bear Logo" Elevation="0" Class="background-image-settings no-pointers"/>
        <MudContainer Class="pa-0 d-flex justify-center align-center">
            <MudText>Debug Options</MudText>
            <MudSpacer/>
            <MudSwitch @bind-Value="debugUserSwitch" Color="Color.Tertiary"/>
        </MudContainer>
        <MudDivider DividerType="DividerType.Middle" Class="my-2"/>
        <MudContainer Class="pa-0 d-flex justify-center align-center">
            <MudText>Show location and size in title bar</MudText>
            <MudSpacer/>
            <MudSwitch @bind-Value="debugOptionOne" Color="Color.Tertiary" Disabled="!debugUserSwitch"/>
        </MudContainer>
    </MudPaper>
</MudItem>

@code
{
    private bool debugUserSwitch { get; set; } = false;
    private bool debugOptionOne { get; set; } = false;
}