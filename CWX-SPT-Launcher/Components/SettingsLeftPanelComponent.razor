<MudItem sm="6">
    <MudPaper Class="pa-5 mr-1 gap-2 d-flex flex-column card-overflow" Elevation="3">
        <MudImage Src="cogs.png" Alt="Bear Logo" Elevation="0" Class="background-image-settings no-pointers"/>
        <MudSelect  T="string" Label="Language" Variant="Variant.Outlined" AnchorOrigin="Origin.CenterRight">
            <MudSelectItem T="string" Value="@("English")"/>
            <MudSelectItem T="string" Value="@("Dutch")"/>
            <MudSelectItem T="string" Value="@("Pirate")"/>
            <MudSelectItem T="string" Value="@("French")"/>
        </MudSelect>
        <MudDivider DividerType="DividerType.Middle" Class="my-2"/>
        <MudContainer Class="pa-0 d-flex justify-center align-center relative">
            <MudSwitch @bind-Value="traySwtich" Color="Color.Tertiary" LabelPosition="LabelPosition.Start">
                <MudText>Close to tray</MudText>
            </MudSwitch>
        </MudContainer>
        <MudDivider DividerType="DividerType.Middle" Class="my-2"/>
        <MudContainer Class="pa-0 d-flex justify-center align-center">
            <MudText>Minimize on game start</MudText>
            <MudSpacer/>
            <MudSwitch @bind-Value="minimizeSwitch" Color="Color.Tertiary"/>
        </MudContainer>
    </MudPaper>
</MudItem>

@code
{
    private bool traySwtich { get; set; } = false;
    private bool minimizeSwitch { get; set; } = false;
}