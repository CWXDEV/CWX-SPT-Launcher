<MudItem sm="12">
    <MudPaper Class="pa-5 ml-1 gap-1 d-flex flex-column card-overflow" Elevation="3">
        <MudImage Src="cogs.png" Alt="Bear Logo" Elevation="0" Class="background-image-settings no-pointers"/>
        <MudContainer Class="pa-0 d-flex justify-center align-center">
            <MudText>Advanced user</MudText>
            <MudSpacer/>
            <MudSwitch @bind-Value="advancedUserSwitch" Color="Color.Tertiary"/>
        </MudContainer>
        <MudDivider DividerType="DividerType.Middle" Class="my-2"/>
        <MudTextField @bind-Value="Path" Variant="Variant.Outlined" Label="Spt Game Path" Disabled="!advancedUserSwitch"/>
    </MudPaper>
</MudItem>

@code
{
    private bool advancedUserSwitch { get; set; } = false;
    private string Path { get; set; } = "C:\\SPT\\spt390";
}